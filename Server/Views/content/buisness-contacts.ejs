<h1>Buisness Contacts</h1>
<div id="buisContents">
    <div class="row">
        <div class="col">
            <a href "/add" id="addButton" class="btn btn-success mb-1"><i class="fa-solid fa-square-plus"></i> Add </a>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text.center">Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="buisContacts">
                    <% for(let count=0; count < contacts.length; count++) 
                    { %>
                        <tr>
                            <td><%= contacts[count].Name %></td>
                            <td><%= contacts[count].phNumber %></td>
                            <td><%= contacts[count].Email %></td>
                            <td class="text-center"><a href="/edit/<%=contacts[count]._id %>" class="btn btn-success btn-sm edit"><i class="fa-solid fa-pen-to-square"></i>Edit</a></td>
                            <td class="text-center"><a href="/delete/<%=contacts[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fa-solid fa-user-slash"></i>Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>